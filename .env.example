# ウィンドウ設定
TARGET_WINDOW_TITLE=LDPlayer

# キャプチャ設定
CAPTURE_INTERVAL=1.0  # 秒単位

# 棒読みちゃん設定
BOUYOMI_HOST=127.0.0.1
BOUYOMI_PORT=50001

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=app.log

# Tesseract OCR設定
# Windows用の標準インストールパスの例
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
OCR_LANGUAGE=jpn
OCR_CONFIG=--psm 6
